{
  "name": "pkt-remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "pnpm generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "pnpm generate:css --watch",
    "dev:remix": "PORT=5000 remix dev",
    "generate:css": "tailwindcss -i ./styles/tailwind.css -o ./app/styles/tailwind.css",
    "test": "vitest",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc -b"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@headlessui/react": "1.7.7",
    "@heroicons/react": "2.0.13",
    "@remix-run/node": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "@remix-run/vercel": "^1.11.1",
    "@vercel/node": "^2.8.15",
    "clsx": "1.2.1",
    "framer-motion": "^8.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "1.3.1",
    "use-debounce": "^9.0.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright/test": "^1.29.2",
    "@remix-run/dev": "^1.11.1",
    "@remix-run/eslint-config": "^1.11.1",
    "@remix-run/serve": "^1.11.1",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/typography": "0.5.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-react": "^3.0.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "8.6.0",
    "jsdom": "^21.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.3",
    "prettier-plugin-tailwindcss": "0.2.1",
    "react-router": "^6.7.0",
    "tailwindcss": "3.2.4",
    "typescript": "^4.9.4",
    "vitest": "^0.27.3"
  }
}
